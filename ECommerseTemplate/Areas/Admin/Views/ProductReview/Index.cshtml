@model List<ProductReview>
<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-0">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Product Review List</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<table id="tblData" class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Name</th>
					<th>Rating</th>
					<th>Email</th>
					<th>Title</th>
					<th>Review</th>
					<th>Product</th>
					<th>Images</th>
					<th>Actions</th>
				</tr>
			</thead>
		</table>
	</div>
</div>

@section Scripts{
	<script src="~/js/productreview.js"></script>
}







