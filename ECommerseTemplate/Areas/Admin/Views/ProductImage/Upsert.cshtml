@model ProductImageVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.ProductImage.Id != 0 ? "Update" : "Create") Product Image</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="ProductImage.Id" hidden />
            <input asp-for="ProductImage.Path" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @*<div asp-validation-summary="ModelOnly"></div>*@
                        <div class="form-floating py-2 col-12">
                            <input type="file" name="file" asp-for="ProductImage.Path" class="form-control border-0 shadow" />
                            <label asp-for="ProductImage.Path" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="ProductImage.ProductId" asp-items="@Model.ProductList" class="form-select border-0 shadow">
                                <option disabled selected>--Select Product--</option>
                            </select>
                            <label asp-for="ProductImage.ProductId" class="ms-2"></label>
                            <span asp-validation-for="ProductImage.ProductId" class="text-danger"></span>
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary form-control">@((Model.ProductImage.Id != 0) ? "Update" : "Create")</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="ProductImage" asp-action="Index" class="btn btn-outline-primary border  form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    @if (!string.IsNullOrEmpty(Model.ProductImage.Path))
                    {
                        <img src="~/@Model.ProductImage.Path" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9"></img>
                    }
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons  lists   table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough |  align lineheight | numlist bullist indent outdent',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}